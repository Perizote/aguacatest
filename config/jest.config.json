{
  "rootDir": "..",
  "testMatch": [
    "<rootDir>/**/__tests__/?(*.)(test).{ts}",
    "<rootDir>/**/?(*.)(test).ts?(x)"
  ],
  "moduleFileExtensions": ["ts", "tsx", "json", "js"],
  "moduleNameMapper": {
    "^aguacatest$": "<rootDir>/src"
  },
  "setupFilesAfterEnv": ["<rootDir>/config/setup.ts"]
}
